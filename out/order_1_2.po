    (
        forall Z (hp(X) and hp(Y) and 
                    ((hp(Z) and X < Z and Z < Y -> not tp(Z)) 
                        and (tp(Z) and X < Z and Z < Y -> not tp(Z))
                    )
                ) -> hsort(X, Y)
    ) and 
    (
        forall Z (tp(X) and tp(Y) and (tp(Z) and X < Z and Z < Y -> not tp(Z))) 
            -> tsort(X, Y)
    )
).
